@tbot.on(events.NewMessage(pattern=None))
async def _(event):   
    gmail = tmail.find({})
    for c in gmail:
        if event.sender_id == c["user"]:
           addr = get_email(event.sender_id)
           email = addr["email"]
           hash = addr["hash"]
           

